<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imagenArchivo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:src="@drawable/folder1_color"
        />

    <TextView
        android:id="@+id/nombreArchivo"
        android:text="DAM2k16_17"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imagenArchivo"
        android:layout_alignTop="@+id/imagenArchivo"

        />
    <TextView
        android:id="@+id/pesoArchivo"
        android:text="88kb"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nombreArchivo"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
